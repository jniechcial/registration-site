<% provide(:title, 'New robot') %>
<h1>Create robot</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@robot) do |f| %>
    	<%= render 'shared/robot_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :competition %>
      <%= f.collection_select :competition_id, Competition.all, :id, :name, prompt: true %>

      <%= f.label :team %>
      <%= f.collection_select :team_id, current_user.teams, :id, :name, prompt: true %>

      <%= f.submit "Create robot", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>