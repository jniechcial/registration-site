<% provide(:title, "Edit team #{@team.name}") %>
<h1>Update your team</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@team) do |f| %>
      <%= render 'shared/team_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Update team", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>